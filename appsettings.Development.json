{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "Console": {
      "IncludeScopes": true,
      "LogLevel": {
        "Microsoft.AspNetCore.Mvc.Razor.Internal": "Warning",
        "Microsoft.AspNetCore.Mvc.Razor.Razor": "Debug",
        "Microsoft.AspNetCore.Mvc.Razor": "Error",
        "Default": "Information"
      }
    }
  },

  "AllowedHosts": "*",

  "Repositories": {
    "DefaultDbContext": "Sqlite"
  },

  "ConnectionStrings": {
    "Sqlite": "Data Source = #PATH#qwirkle.sqlite;"
  },


  "ImagesPath": {
    "Tiles": "Resources\\Images\\Tiles"
  }
}
